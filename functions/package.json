{
  "name": "company-firestore-api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t company-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env company-api",
    "logs:clean": "node -e \"require('./utils/logger').cleanOldLogs()\"",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "express",
    "firebase",
    "firestore",
    "api",
    "company-data"
  ],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.1",
    "express": "~4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.2",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "puppeteer": "^24.10.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": "18"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
